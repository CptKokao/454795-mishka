{
  "name": "mishka",
  "version": "0.1.0",
  "private": true,
  "description": "Личный проект «Мишка» от HTML Academy",
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "1.x",
    "browser-sync": "2.18.x",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^4.0.0",
    "gulp-csso": "^3.0.0",
    "gulp-imagemin": "^3.4.0",
    "gulp-less": "3.3.x",
    "gulp-plumber": "1.1.x",
    "gulp-rename": "^1.2.2",
    "gulp-svgstore": "^6.1.0",
    "gulp-uglify": "^3.0.0",
    "gulp-webp": "^2.3.0",
    "pump": "^1.0.2",
    "run-sequence": "^2.2.0",
    "stylelint": "8.1.x",
    "stylelint-config-htmlacademy": "0.1.x"
